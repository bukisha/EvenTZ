<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>
    <style name="DetailsTheme" parent="Theme.AppCompat.Light.NoActionBar"/>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="textDetailsDate" parent="TextAppearance.AppCompat">
        <item name="android:textSize">30sp</item>
    </style>
    <style name="textDetailsEventName" parent="TextAppearance.AppCompat">
    <item name="android:textSize">30sp</item>
    </style>
    <style name="textDetailsEventDescription" parent="TextAppearance.AppCompat">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextAppearance.Design.CollapsingToolbar.Expanded.TitleText">
        <item  name="android:textColor">@color/colorAccent</item>
        <item  name="android:textSize">20sp</item>
        <item name="android:layout_gravity">left</item>
    </style>


</resources>
